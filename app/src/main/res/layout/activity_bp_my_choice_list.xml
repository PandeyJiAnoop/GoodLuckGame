<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/a_game"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black"
        android:elevation="5dp">
        <com.akp.aonestar.Basic.HeaderOnClick
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/header"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout android:visibility="gone"
                android:layout_width="match_parent"
                android:alpha=".9"
                android:layout_height="150dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_slider_mainActivity"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="7dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="150dp"
                        android:id="@+id/banner_rl1">
                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/pager1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true" />
                        <com.viewpagerindicator.CirclePageIndicator
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/red"
                android:layout_height="2dp">
            </View>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_tv"
                    android:textAllCaps="true"
                    android:background="#032359"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textAlignment="center"
                    android:text="* Choose two product and avoid participating in the race. *"
                    android:textColor="#FEEB19"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <Button android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:id="@+id/btnSave"
                    android:layout_alignParentBottom="true"
                    android:layout_width="300dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:text="Save Selected Product"
                    android:textAllCaps="false" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/norecord_tv"
                        android:layout_centerInParent="true"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/norecord"
                        />
                    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                        android:id="@+id/srl_refresh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/cust_recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
                </RelativeLayout>



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>