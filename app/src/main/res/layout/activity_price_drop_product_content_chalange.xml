<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/main_rl"
    android:orientation="vertical">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/rlLoginPopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/a_game">
    </pl.droidsonroids.gif.GifImageView>
    <RelativeLayout
        android:id="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black"
        android:elevation="5dp">

        <com.akp.aonestar.Basic.HeaderOnClick
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>




        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_above="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_rl"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTrail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRODUCT CONTEST CHALLENGE"
                android:textColor="#e8cc77"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/recyclerProduct1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                        <TextView
                            android:id="@+id/pro_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Code"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                        <TextView
                            android:id="@+id/pro_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Code"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                        <TextView android:id="@+id/pro_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Code"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>
                        <TextView android:id="@+id/pro_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Code"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u20B9"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                        <TextView
                            android:id="@+id/price_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent">
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/contest_gif"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/contest"
                        android:layout_centerHorizontal="true"/>
                    <RelativeLayout
                        android:id="@+id/play_contest_rl"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">



                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/win_img"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY"/>

                        <ImageView
                            android:id="@+id/imgPlay"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/btn_arrow_img"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="fitXY"/>

                    </RelativeLayout>

                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/recyclerProduct2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                        <TextView
                            android:id="@+id/a_pro_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                        <TextView
                            android:id="@+id/a_pro_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                        <TextView
                            android:id="@+id/a_pro_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                        <TextView
                            android:id="@+id/a_pro_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u20B9"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                        <TextView
                            android:id="@+id/a_pro_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:padding="7dp"
                            android:background="@drawable/back_white_sqare"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPriceList"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <TextView                 android:background="@color/black"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CHOOSE YOUR LIKELY PRODUCT AND GET A GIFT"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginTop="0dp"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/black"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/norecord_tv"
                                android:layout_centerInParent="true"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/norecord"
                                />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/cust_recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible" />
                        </RelativeLayout>


                    </androidx.appcompat.widget.LinearLayoutCompat>



                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    <RelativeLayout
        android:background="#A3000000"
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/buynow_btn"
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:src="@drawable/bhome"
                android:tint="#F91807"
                android:padding="5dp"
                android:layout_height="40dp">
            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/rectangle_gradient_pink"
            android:layout_below="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:scrollHorizontally="true"
                android:singleLine="true"  android:textColor="@color/black"
                android:text="www.aoneshop.co.in"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="info@aoneshop.co.in"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.akp.aonestar.PriceDropModule.PriceDropFloatingButtonGameDetails
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_details"/>
    </LinearLayout>

</RelativeLayout>