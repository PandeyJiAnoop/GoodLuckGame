<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardElevation="20dp"
    app:cardBackgroundColor="#1B1102"
    android:layout_margin="2dp"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/a_logo"
                        android:layout_height="50dp">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alert Confirmation for Amount:- â‚¹ 10"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>


                </LinearLayout>


                <TextView android:background="@drawable/btn"
                    android:layout_width="match_parent"
                    android:id="@+id/title_tv"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="Scan QR and Submit Details"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>


                <ImageView
                    android:id="@+id/image_qr"
                    android:layout_width="match_parent"
                    android:src="@drawable/a_logo"
                    android:layout_marginTop="10dp"
                    android:layout_height="250dp">
                </ImageView>

                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:text="OR"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>

                <TextView android:background="@drawable/cardgreen"
                    android:layout_width="match_parent"
                    android:id="@+id/upiid_tv" android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="Scan QR and Submit Details"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UTR No *"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

                <EditText android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:hint="Enter UTR number*"
                    android:id="@+id/utr_et"
                    android:layout_margin="5dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                </EditText>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/tvCancel"
                        android:background="@color/redone"
                        android:gravity="center_horizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginEnd="15dp"
                        android:layout_gravity="end"/>
                    <TextView
                        android:padding="10dp"
                        android:id="@+id/tvYes"
                        android:background="@color/green"
                        android:gravity="center_horizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_gravity="end"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/pass_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*Please take a screenshot if you have any issue"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:textColor="@color/grey"
                    android:textSize="12sp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.cardview.widget.CardView>