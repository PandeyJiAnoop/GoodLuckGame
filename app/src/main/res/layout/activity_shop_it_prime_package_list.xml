<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/anoop"
    android:orientation="vertical">
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/a_game">
    </pl.droidsonroids.gif.GifImageView>
    <pl.droidsonroids.gif.GifImageView android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/star">
    </pl.droidsonroids.gif.GifImageView>
    <RelativeLayout
        android:id="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black"
        android:elevation="5dp">
        <com.akp.aonestar.Basic.HeaderOnClick
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


    <ScrollView
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/text_ll"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView  android:id="@+id/marqueeText"
                    android:text="Prime Package income and gifts for every customer cashback + 5 Products + cash or gift offer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="18dp"  android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <TextView
                   android:background="#00BCD4"
                    android:text="Prime PACKAGE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="25dp"
                    android:textColor="@color/redone"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/welcome_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="21dp"
                android:textColor="@color/golden_color"
                android:textStyle="bold" />


            <RelativeLayout android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <pl.droidsonroids.gif.GifImageView
                    android:src="@drawable/circlegf"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                </pl.droidsonroids.gif.GifImageView>
                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:paddingBottom="10dp"
                            android:orientation="vertical"
                            android:paddingLeft="40dp"
                            android:paddingTop="5dp">
                            <TextView android:textAlignment="center"                                 android:layout_marginBottom="5sp"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Free Trial product" android:textStyle="bold"
                                android:textColor="#fff"/>

                            <pl.droidsonroids.gif.GifImageView
                                android:id="@+id/imga"
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:src="@drawable/p_two"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:paddingBottom="10dp"
                            android:orientation="vertical"
                            android:paddingRight="30dp"
                            android:paddingTop="5dp">
                            <TextView android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_marginBottom="5sp"
                                android:layout_height="wrap_content"
                                android:text="Consolations Product"
                                android:textStyle="bold"
                                android:textColor="#fff"/>

                            <pl.droidsonroids.gif.GifImageView
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:src="@drawable/p_three"/>
                            <!--                            android:id="@+id/imgb"-->
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingRight="30dp">
                            <pl.droidsonroids.gif.GifImageView
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:src="@drawable/p_one"/>
                            <!--                            android:id="@+id/imgc"-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Free Joining\nProducts" android:textStyle="bold"
                                android:textColor="#fff"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_marginBottom="15dp"
                            android:orientation="vertical">
                            <pl.droidsonroids.gif.GifImageView
                                android:id="@+id/imgg"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/goodluckgf"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="30dp">

                            <pl.droidsonroids.gif.GifImageView                                 android:id="@+id/imgd"

                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:src="@drawable/p_five"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Seasonal Sale\nProduct" android:textStyle="bold"
                                android:textColor="#fff"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingBottom="5dp"
                            android:paddingLeft="40dp">
                            <pl.droidsonroids.gif.GifImageView
                                android:id="@+id/imge"
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:src="@drawable/p_four"/>
                            <TextView android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Discounts Product" android:textStyle="bold"
                                android:textColor="#fff"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingBottom="5dp"
                            android:paddingRight="40dp">
                            <pl.droidsonroids.gif.GifImageView
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:src="@drawable/p_six"/>
                            <!--                            android:id="@+id/imgf"-->
                            <TextView android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="WEEKLY WINNER" android:textStyle="bold"
                                android:textColor="#fff"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/all_member_ll"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/norecord_tv"
                        android:layout_centerInParent="true"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/norecord"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout  android:background="@drawable/marquemsg"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_height="120dp">
                    <TextView
                        android:text="INFORMATION"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:padding="3dp"
                        android:background="@drawable/back_sqare_black"
                        android:textSize="22dp" android:layout_marginTop="2dp"
                        android:textColor="@color/golden_color"
                        android:textStyle="bold" />


                    <TextView android:gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/tvtimeperiod"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/aparaj"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:padding="5dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="A very warm welcome to you!\nIt is Lovely to have you among us!"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout android:visibility="gone"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <pl.droidsonroids.gif.GifImageView android:id="@+id/imgb"
                            android:layout_width="match_parent" android:background="@drawable/rect_pink"
                            android:layout_height="160dp" android:padding="10dp"
                            android:src="@drawable/d_emi1" />
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:text="EMI 300X12 WEEK"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <pl.droidsonroids.gif.GifImageView android:background="@drawable/rect_pink"
                            android:layout_width="match_parent" android:id="@+id/imgb1"
                            android:layout_height="160dp" android:padding="10dp"
                            android:src="@drawable/d_emi2" />
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:text="EMI 200X12 WEEK"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <pl.droidsonroids.gif.GifImageView android:background="@drawable/rect_pink"
                            android:layout_width="match_parent" android:id="@+id/imgb2"
                            android:layout_height="160dp" android:padding="10dp"
                            android:src="@drawable/d_emi3" />
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:text="EMI 100X12 WEEK"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <pl.droidsonroids.gif.GifImageView  android:id="@+id/imgc"
                            android:layout_width="match_parent" android:background="@drawable/rect_pink"
                            android:layout_height="160dp" android:padding="10dp"
                            android:src="@drawable/d_freejoing4" />
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:text="FREE JOINING KIT"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <pl.droidsonroids.gif.GifImageView  android:id="@+id/imgf"
                            android:layout_width="match_parent" android:background="@drawable/rect_pink"
                            android:layout_height="160dp" android:padding="10dp"
                            android:src="@drawable/d_weekly5" />
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:text="WEEKLY WINNER"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <pl.droidsonroids.gif.GifImageView android:background="@drawable/rect_pink"
                            android:layout_width="match_parent" android:id="@+id/want_anything_gf"
                            android:layout_height="160dp" android:padding="10dp"
                            android:src="@drawable/d_anything" />
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/white"
                            android:text="DO YOU WANT\nANYTHING ELSE"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent" android:visibility="gone"
                android:layout_marginBottom="40dp"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="@color/back_black">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_toLeftOf="@+id/bottom_viewmore_img"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView android:visibility="gone"
                            android:backgroundTint="#FFEB3B"
                            android:background="@drawable/rectangle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get Paid \u20B9 10 For Each Game Played"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#F44336"
                            android:layout_marginStart="5dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/our_popular_project"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:textColor="@color/yellow"
                            android:layout_marginStart="5dp"/>

                        <View
                            android:layout_width="155dp"
                            android:layout_height="1.5dp"
                            android:background="@color/yellow"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/good_service_is_our_passion_nwe_create_fun_games_that_you_ll_love"
                            android:textStyle="normal"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:layout_marginStart="5dp"/>

                    </LinearLayout>
                    <ImageView android:layout_marginRight="10dp"
                        android:id="@+id/bottom_viewmore_img"
                        android:src="@drawable/viewmore"
                        android:layout_centerVertical="true"
                        android:layout_width="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="50dp"></ImageView>
                </RelativeLayout>

                <RelativeLayout android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/bottom_dummy_rl"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent" android:id="@+id/im"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <pl.droidsonroids.gif.GifImageView android:id="@+id/dumy"
                                android:layout_width="match_parent"
                                android:layout_height="170dp"
                                android:src="@drawable/sp_sunday_gf" />
                        </LinearLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView android:layout_below="@+id/im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/dummy_text"
                        android:text="If you do not recieve one of the gifta after paying the installments of twelve weeks in the shopit,then you will be gien motocorp xtreme 200r by the compaqny.\nBike registartion fee and insurance will have to be paid by the customer himself"
                        android:textStyle="normal"
                        android:textSize="13sp" android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:layout_marginStart="5dp"/>

                </RelativeLayout>



            </androidx.appcompat.widget.LinearLayoutCompat>






        </LinearLayout>
    </ScrollView>

    <LinearLayout android:id="@+id/bottom"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <ImageView
                android:id="@+id/back_img"
                android:padding="5dp"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/bhome"/>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/buynow_btn"
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:src="@drawable/shopnow"
                android:layout_height="45dp">

            </pl.droidsonroids.gif.GifImageView>

            <ImageView android:padding="5dp" android:id="@+id/review_img"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_centerVertical="true"
                android:tint="#F7483B"
                android:layout_height="40dp"
                android:src="@drawable/breview"/>
        </RelativeLayout>
        <com.akp.aonestar.Basic.BottomOnClick  android:id="@+id/bottom1"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.akp.aonestar.Basic.FloatingButtonGameDetails
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_details"/>
    </LinearLayout>

</RelativeLayout>