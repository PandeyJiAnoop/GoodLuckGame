<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/main_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/a_game"/>
    <RelativeLayout
        android:id="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black"
        android:elevation="5dp">
        <com.akp.aonestar.Basic.HeaderOnClick
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView android:id="@+id/sliding_menu"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:tint="@color/white"
            android:src="@drawable/menu" />
        <!--       <include layout="@layout/header"></include>-->
    </RelativeLayout>

    <ScrollView
        android:layout_above="@+id/btm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_rl">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvtimeperiod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/aparaj"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="A very warm welcome to you!\nIt is Lovely to have you among us!"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivOne"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:padding="5dp"
                        android:src="@drawable/game1" />
                    <ImageView android:id="@+id/ivfour"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:padding="5dp" android:layout_marginTop="5dp"
                        android:src="@drawable/game2" />
                    <ImageView
                        android:id="@+id/ivtwo"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:padding="5dp" android:layout_marginTop="5dp"
                        android:src="@drawable/game3" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="85dp"
                            android:id="@+id/main_rl"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:layout_height="85dp">
                            <pl.droidsonroids.gif.GifImageView
                                android:layout_width="85dp"
                                android:id="@+id/coin"
                                android:src="@drawable/aonecoingf"
                                android:layout_height="85dp"
                                android:layout_gravity="center_vertical" />
                        </RelativeLayout>
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="85dp"
                            android:padding="5dp"
                            android:background="@drawable/back_gradient_red"
                            android:layout_height="25dp">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="60dp"
                                android:text="Coming Soon"
                                android:textStyle="bold"
                                android:textSize="8.5dp"
                                android:id="@+id/name_et"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content">
                            </TextView>
                            <ImageView
                                android:layout_width="15dp"
                                android:src="@drawable/dot"
                                android:layout_gravity="end"
                                android:layout_height="15dp">
                            </ImageView>
                        </LinearLayout>

                    </RelativeLayout>


                        <pl.droidsonroids.gif.GifImageView android:visibility="gone"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="75dp"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/call"
                            android:layout_height="75dp"
                            android:padding="10dp"
                            android:layout_gravity="center_vertical" />
                    </RelativeLayout>
                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:layout_width="70dp"
                    android:layout_height="match_parent">
                    <pl.droidsonroids.gif.GifImageView    android:layout_marginBottom="5dp"
                        android:id="@+id/youtube"
                        android:layout_width="65dp"
                        android:src="@drawable/youtube"
                        android:layout_height="65dp"
                        android:layout_gravity="center_vertical"/>
                    <pl.droidsonroids.gif.GifImageView  android:layout_marginBottom="5dp"
                        android:id="@+id/fb"
                        android:padding="9dp"
                        android:layout_width="65dp"
                        android:src="@drawable/fba"
                        android:layout_height="65dp"
                        android:layout_gravity="center_vertical" />
                    <pl.droidsonroids.gif.GifImageView
                        android:layout_marginBottom="5dp"
                        android:id="@+id/insta"
                        android:layout_width="65dp"
                        android:src="@drawable/insta"
                        android:layout_height="65dp"
                        android:padding="8dp"
                        android:layout_gravity="center_vertical"/>
                    <pl.droidsonroids.gif.GifImageView
                        android:layout_marginBottom="5dp"
                        android:id="@+id/chat"
                        android:layout_width="65dp"
                        android:src="@drawable/chatbot"
                        android:layout_height="65dp"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical"/>
                    <pl.droidsonroids.gif.GifImageView
                        android:layout_marginBottom="5dp"
                        android:layout_width="65dp"
                        android:id="@+id/whatsap"
                        android:src="@drawable/whatsap"
                        android:layout_height="65dp" android:padding="10dp"
                        android:layout_gravity="center_vertical" />
                    <pl.droidsonroids.gif.GifImageView
                        android:layout_marginBottom="5dp"
                        android:layout_width="65dp"
                        android:id="@+id/phone"
                        android:src="@drawable/call"
                        android:layout_height="65dp" android:padding="10dp"
                        android:layout_gravity="center_vertical" />


                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/ivthree"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/gamethreegif" />
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/ivfour"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/gamefourgif" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout android:id="@+id/btm"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/gameselection_ban_img"
           android:padding="10dp"
            android:layout_width="match_parent"
            android:src="@drawable/share"
            android:layout_height="60dp">
        </ImageView>
        <RelativeLayout
            android:background="@drawable/rectangle_gradient_pink"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="10dp"  android:autoLink="web"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="www.aoneshop.co.in"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"  android:autoLink="email" android:layout_gravity="end"
                android:singleLine="true"
                android:text="info@aoneshop.co.in"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <include
            layout="@layout/slidingmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>