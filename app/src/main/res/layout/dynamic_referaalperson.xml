<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@drawable/card"
        android:padding="10dp"
        android:id="@+id/live_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#FFE9E9"
                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="100dp"
                    android:text="S.No."
                    android:gravity="center_vertical"

                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Name"
                    android:gravity="center_vertical"

                    android:textStyle="bold"


                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="AOneStar Id"
                    android:gravity="center_vertical"
                    android:textStyle="bold"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sr_no"
                    android:layout_width="100dp"

                    android:text=""
                    android:gravity="center_vertical"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text=""
                    android:gravity="center_vertical"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:id="@+id/bbid_tv"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text=""
                    android:gravity="center_vertical"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout                 android:background="#FFE9E9"

                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="100dp"
                    android:text="Level"
                    android:gravity="center_vertical"
                    android:textStyle="bold"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Join"
                    android:gravity="center_vertical"

                    android:textStyle="bold"


                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Sponser Id"
                    android:gravity="center_vertical"
                    android:textStyle="bold"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/invest_tv"
                    android:layout_width="100dp"

                    android:text="66666666"
                    android:gravity="center_vertical"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text=""
                    android:gravity="center_vertical"
                    android:id="@+id/date_tv"
                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:id="@+id/upgrade_tv"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text=""
                    android:gravity="center_vertical"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>

        </LinearLayout>



        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/rlone"
            android:layout_height="wrap_content">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/cat_img"
                android:layout_width="60dp"
                android:tint="@color/white"
                android:layout_height="60dp"
                android:src="@drawable/a_profile"
                ></com.github.siyamed.shapeimageview.CircularImageView>
            <LinearLayout
                android:layout_marginLeft="65dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="A.K. Pandey"
                    android:gravity="center_vertical"

                    android:textColor="@color/redone"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:background="#079E0D"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <ImageView  android:id="@+id/blink"
                    android:layout_gravity="center_vertical"
                    android:layout_width="15dp"

                    android:src="@android:drawable/radiobutton_off_background"
                    android:layout_height="15dp">
                </ImageView>
                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="wrap_content"
                    android:text="New"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:paddingRight="5dp"

                    android:textColor="@color/black"

                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp">

    </View>


</LinearLayout>
