<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_height="wrap_content">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top_layout">
                <ImageView
                    android:id="@+id/pro_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/redone"
                    android:padding="5dp"
                    android:src="@drawable/cancel" />
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#07406E"
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                android:layout_below="@+id/top_layout"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView android:scaleType="fitXY"
                        android:id="@+id/pro_img"
                        android:layout_width="match_parent"
                        android:src="@drawable/a_appicons"
                        android:layout_height="500dp">
                    </ImageView>
                    <ImageView android:background="#043963"
                        android:id="@+id/pro_sharwahatsap_img"
                        android:layout_width="match_parent"
                        android:src="@drawable/buyproduct"
                        android:layout_height="70dp">
                    </ImageView>
                    <TextView
                        android:background="#043963"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="Note:- Saved Contact number(9155690499)and sent it to directly on whatsap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>