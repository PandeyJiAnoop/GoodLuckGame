<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycScratchList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/backgroundd"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="50dp">
        <TextView android:id="@+id/res_one_tv"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent" android:gravity="center"
            android:text="*" android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/bgll"
            android:textSize="22sp" android:layout_marginBottom="1dp"
            android:padding="7dp"/>
        <TextView android:id="@+id/res_two_tv"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent" android:gravity="center"
            android:text="*" android:layout_gravity="center"
            android:textColor="@color/white"  android:layout_marginRight="2dp"
            android:textStyle="bold"  android:background="@drawable/bgll"
            android:textSize="22sp" android:layout_marginBottom="1dp"
            android:padding="7dp"/>
        <TextView android:id="@+id/res_three_tv"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent" android:gravity="center"
            android:text="*" android:layout_gravity="center"
            android:textColor="@color/white"  android:layout_marginRight="2dp"
            android:textStyle="bold"  android:background="@drawable/bgll"
            android:textSize="22sp" android:layout_marginBottom="1dp"
            android:padding="7dp"/>
    </LinearLayout>

    <LinearLayout android:visibility="gone"
        android:background="@drawable/bgll"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1" android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/triple_one"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </pl.droidsonroids.gif.GifImageView>

        </LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:background="@drawable/bgll"
                android:orientation="vertical"
                android:id="@+id/recyclerProduct1"
                android:layout_width="30dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp" android:gravity="center"
                    android:text="4" android:layout_gravity="center"
                    android:textColor="@color/yellow"
                    android:textStyle="bold"
                    android:textSize="11sp" android:layout_marginBottom="1dp"
                    android:padding="7dp"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp" android:gravity="center"
                    android:text="1" android:layout_gravity="center"
                    android:textColor="@color/yellow"
                    android:textStyle="bold"
                    android:textSize="11sp" android:layout_marginBottom="1dp"
                    android:padding="7dp"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp" android:gravity="center"
                    android:text="1" android:layout_gravity="center"
                    android:textColor="@color/yellow"
                    android:textStyle="bold"
                    android:textSize="11sp" android:layout_marginBottom="1dp"
                    android:padding="7dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="50dp"
                android:layout_height="wrap_content">
                <LinearLayout android:layout_marginBottom="1dp"
                    android:id="@+id/view_ll"
                    android:background="@drawable/back_stroke_blur"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:orientation="vertical"
                    android:layout_height="40dp">
                    <LinearLayout  android:background="@drawable/back_stroke_blur"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3.5dp">
                            <TextView android:layout_gravity="center_horizontal"
                                android:id="@+id/scratch_tvMNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_marginBottom="1dp"
                    android:id="@+id/view_ll1"
                    android:background="@drawable/back_stroke_blur"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:orientation="vertical"
                    android:layout_height="40dp">
                    <LinearLayout  android:background="@drawable/back_stroke_blur"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3.5dp">
                            <TextView android:layout_gravity="center_horizontal"
                                android:id="@+id/scratch_tvMNum1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_marginBottom="1dp"
                    android:id="@+id/view_ll2"
                    android:background="@drawable/back_stroke_blur"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:orientation="vertical"
                    android:layout_height="40dp">
                    <LinearLayout  android:background="@drawable/back_stroke_blur"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3.5dp">
                            <TextView android:layout_gravity="center_horizontal"
                                android:id="@+id/scratch_tvMNum2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_marginBottom="1dp"
                    android:id="@+id/view_ll3"
                    android:background="@drawable/back_stroke_blur"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:orientation="vertical"
                    android:layout_height="40dp">
                    <LinearLayout  android:background="@drawable/back_stroke_blur"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3.5dp">
                            <TextView android:layout_gravity="center_horizontal"
                                android:id="@+id/scratch_tvMNum3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_marginBottom="1dp"
                    android:id="@+id/view_ll4"
                    android:background="@drawable/back_stroke_blur"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:orientation="vertical"
                    android:layout_height="40dp">
                    <LinearLayout  android:background="@drawable/back_stroke_blur"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3.5dp">
                            <TextView android:layout_gravity="center_horizontal"
                                android:id="@+id/scratch_tvMNum4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="30dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp" android:gravity="center"
                    android:text="A" android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="11sp" android:layout_marginBottom="1dp"
                    android:padding="7dp"
                    android:background="@drawable/back_white_sqare_rect_red"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp" android:gravity="center"
                    android:text="B" android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="11sp" android:layout_marginBottom="1dp"
                    android:padding="7dp"
                    android:background="@drawable/back_white_sqare_rect_red"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp" android:gravity="center"
                    android:text="C" android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="11sp" android:layout_marginBottom="1dp"
                    android:padding="7dp"
                    android:background="@drawable/back_white_sqare_rect_red"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp" android:gravity="center"
                    android:text="D" android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:padding="7dp" android:layout_marginBottom="1dp"
                    android:background="@drawable/back_white_sqare_rect_red"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp" android:gravity="center"
                    android:text="E" android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:padding="7dp"
                    android:background="@drawable/back_white_sqare_rect_red"/>
            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1" android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/triple_two"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </pl.droidsonroids.gif.GifImageView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>