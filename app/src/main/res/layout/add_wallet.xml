<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="@drawable/anoop"

    >




    <RelativeLayout
        android:id="@+id/rlHeader"
        android:background="@color/purple_700"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ivback"
            android:layout_width="25dp"
            android:tint="@color/white"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/bgk"  />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"

            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Add Wallet"/>


    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/rlHeader"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rlamount"
                android:layout_margin="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvBalance"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:text="Available Balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_below="@+id/tvBalance"
                    android:id="@+id/tvAvailbleBalance"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_below="@+id/tvAvailbleBalance"
                    android:id="@+id/tvStatus"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:text="status on 27 Nov 2021, 10:56"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="40dp"

                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_height="40dp"
                    android:src="@drawable/a_wallet"
                    />

            </RelativeLayout>









            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#8F000000"
                app:cardCornerRadius="20dp"
                android:layout_below="@+id/rlamount"
                android:layout_marginTop="15dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">





                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivWallet"
                            android:src="@drawable/wallet"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <TextView
                            android:layout_toRightOf="@+id/ivWallet"
                            android:textStyle="bold"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:text="Add Money in your Wallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/tv"
                            android:layout_centerVertical="true"
                            android:layout_below="@+id/ivWallet"
                            android:textStyle="normal"
                            android:layout_marginTop="15dp"
                            android:textSize="14dp"
                            android:text="Top up your wallet and let your house run non stop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:tint="@color/white"
                            android:id="@+id/ivRupes"
                            android:layout_marginTop="15dp"
                            android:layout_below="@+id/tv"
                            android:src="@drawable/rupes"
                            android:layout_width="15dp"
                            android:layout_height="15dp"/>
                        <EditText
                            android:imeOptions="flagNoExtractUi"

                            android:id="@+id/edt_amount"
                            android:layout_toRightOf="@+id/ivRupes"
                            android:layout_below="@+id/tv"
                            android:background="@null"
                            android:text="100"
                            android:textSize="15dp"
                            android:textColor="@color/white"

                            android:layout_marginLeft="15dp"
                            android:textColorHint="@color/white"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </EditText>
                        <View
                            android:layout_marginTop="5dp"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/edt_amount"/>

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:weightSum="5"
                        android:layout_height="wrap_content">

                        <TextView
                            android:background="@drawable/bgll"

                            android:id="@+id/tvOne"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="+ ₹ 100"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvtwo"

                            android:padding="5dp"
                            android:background="@drawable/bgll"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="+ ₹ 150"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvthree"

                            android:padding="5dp"
                            android:background="@drawable/bgll"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="+ ₹ 200"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvfour"

                            android:padding="5dp"
                            android:background="@drawable/bgll"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="+ ₹ 500"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvfive"

                            android:padding="5dp"
                            android:background="@drawable/bgll"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="+ ₹ 2000"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvthrees"

                        android:padding="5dp"
                        android:background="@drawable/bgll"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:text="+ ₹ 3000"
                        android:layout_width="70dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_width="250dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="15dp"
                        android:background="@drawable/login_btn"
                        android:layout_marginTop="10dp"
                        android:text="PROCEED TO ADD MONEY"
                        android:id="@+id/addButton"
                        android:layout_height="50dp"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>




</RelativeLayout>
