<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/rlLoginPopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/a_game">
    </pl.droidsonroids.gif.GifImageView>
    <RelativeLayout
        android:id="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black"
        android:elevation="5dp">
        <com.akp.aonestar.Basic.HeaderOnClick
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/header"/>
    </RelativeLayout>


    <ScrollView
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTrail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRIAL PRODUCTS"
                android:textColor="#e8cc77"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>


            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="80dp"
                android:paddingEnd="80dp"
                android:layout_marginTop="10dp"
                android:id="@+id/viewPagerImageSlider" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView                 android:background="@color/black"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* BIGGEST DEAL *"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/norecord_tv"
                        android:layout_centerInParent="true"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/norecord"
                        />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/cust_recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible" />
                </RelativeLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView                 android:background="@color/black"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* TODAY HOT DEAL *"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/norecord_tv1"
                        android:layout_centerInParent="true"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/norecord"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cust_recyclerView1"
                        android:orientation="horizontal"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />
                </RelativeLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>
    <RelativeLayout
        android:background="#A3000000"
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/buynow_btn"
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:src="@drawable/bhome"
                android:tint="#F91807"
                android:padding="5dp"
                android:layout_height="40dp">
            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/rectangle_gradient_pink"
            android:layout_below="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:scrollHorizontally="true"
                android:singleLine="true"  android:textColor="@color/black"
                android:text="www.aoneshop.co.in"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="info@aoneshop.co.in"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.akp.aonestar.PriceDropModule.PriceDropFloatingButtonGameDetails
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_details"/>
    </LinearLayout>

</RelativeLayout>