<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="6dp"
        app:cardBackgroundColor="#eee"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="90dp"
                android:layout_height="110dp"

                android:src="@drawable/ban" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_product_image"
                android:id="@+id/ll_product_detail">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_clear"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_title"
                        android:textColor="@color/black"
                        
                        android:text="Sreemaal Black Chiffon Bandhani Printed Saree"/>

                    <LinearLayout  android:layout_below="@+id/tv_title"
                        android:layout_width="match_parent"
                       android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/iv_clear"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/tv_var"
                            android:textAllCaps="true"
                            android:text=""/>
                        <TextView  android:textAllCaps="true"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/tv_color"
                            android:text=""/>

                    </LinearLayout>

                    <ImageView
                        android:backgroundTint="@color/redone"
                        android:background="@drawable/circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_clear"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/iv_clear"
                        android:tint="@color/white"
                        android:layout_alignParentRight="true"
                        android:padding="6dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toLeftOf="@+id/tv_price"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Qty : "
                            android:textSize="14dp"

                            />

                        <ImageView
                            android:id="@+id/iv_minus"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/grey_border_circle"
                            android:padding="6dp"
                            android:src="@drawable/ic_minus"
                            android:tint="@color/black" />

                        <TextView
                            android:id="@+id/tv_qty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_add"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/grey_border_circle"
                            android:padding="6dp"
                            android:src="@drawable/ic_add"
                            android:tint="@color/black" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:id="@+id/tv_price"
                        android:padding="6dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>