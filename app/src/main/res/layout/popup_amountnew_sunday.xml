<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/cardgreen"
    android:layout_margin="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Select Amount for play?"
        android:textSize="17dp"
        android:padding="10dp"
        android:textColor="@color/black"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout android:id="@+id/fifty"
           android:layout_width="70dp"
           android:layout_height="52dp"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_margin="5dp"
           android:background="@drawable/back_blue_white">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="50"
               android:textSize="20sp"
               android:textColor="@color/black"/>

       </LinearLayout>
       <LinearLayout android:id="@+id/hundred"
           android:layout_width="70dp"
           android:layout_height="52dp"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_margin="5dp"
           android:background="@drawable/back_blue_white">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="100"
               android:textSize="20sp"
               android:textColor="@color/black"/>

       </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="end">
        <TextView
            android:id="@+id/tvCancel"
            android:background="@color/redone"
            android:gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:layout_gravity="end"/>
        <TextView
            android:padding="10dp"
            android:id="@+id/tvYes"
            android:background="@color/green"
            android:gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="end"/>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>