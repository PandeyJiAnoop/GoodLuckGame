<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_gravity="center"
    android:orientation="vertical">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/rlLoginPopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/a_game">
    </pl.droidsonroids.gif.GifImageView>

    <RelativeLayout
        android:id="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black"
        android:elevation="5dp">
        <com.akp.aonestar.Basic.HeaderOnClick
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/header"/>
    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_rl">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTrail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUY BY BID"
                android:textColor="#e8cc77"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:id="@+id/ll_topbanner"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="-80dp"
                    android:layout_height="140dp">
                    <LinearLayout
                        android:alpha="0.7"
                        android:background="@drawable/product_rectangle"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/img_one"
                                    android:layout_margin="3dp"
                                    android:scaleType="fitXY"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:src="@drawable/p_a" />
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/name_one"
                                android:fontFamily="@font/productnamebold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textAlignment="center"
                                android:text="MicroWave"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/code_one"
                                android:fontFamily="@font/productname"
                                android:singleLine="true"
                                android:layout_marginBottom="5sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="Under 600"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1" android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@drawable/product_rectangle"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_margin="3dp"
                                    android:id="@+id/img"
                                    android:scaleType="fitXY"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:src="@drawable/p_a" />
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:fontFamily="@font/productnamebold"
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textAlignment="center"
                                android:text="MicroWave"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                            <TextView
                                android:fontFamily="@font/productname"
                                android:singleLine="true"
                                android:id="@+id/code"
                                android:layout_marginBottom="5sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="Under 600"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="13dp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="-80dp"
                    android:layout_height="140dp">
                    <LinearLayout
                        android:background="@drawable/product_rectangle"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:alpha="0.7"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/img_three"
                                    android:layout_margin="3dp"
                                    android:scaleType="fitXY"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:src="@drawable/p_a" />
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/name_three"
                                android:fontFamily="@font/productnamebold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textAlignment="center"
                                android:text="MicroWave"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                            <TextView
                                android:id="@+id/code_three"
                                android:fontFamily="@font/productname"
                                android:singleLine="true"
                                android:layout_marginBottom="5sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="Under 600"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="13dp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="80dp"
                android:paddingEnd="80dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:id="@+id/viewPagerImageSlider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/back_red_round">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bid Amount Between"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 to 500"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:layout_height="43dp">
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/bid_now_rl"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_orange_red"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tvTextPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="BID NOW"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/back_white_stroke" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:id="@+id/bid_winner_rl"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_orange_red">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="BID Winner"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/back_white_stroke" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:background="@color/black"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAlignment="center"
                android:text="* Next Week Bid *"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/bid_img"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/dis1"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="10dp"/>

                <ImageView
                    android:id="@+id/bid_img1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/dis2"
                    android:scaleType="fitXY"
                    android:layout_marginStart="10dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <TextView
                android:background="@color/black"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAlignment="center"
                android:text="* New Launch *"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:alpha=".9"
                android:layout_height="150dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_slider_mainActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="150dp"
                        android:id="@+id/banner_rl1">
                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/pager1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true" />
                        <com.viewpagerindicator.CirclePageIndicator
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:background="#A3000000"
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/buynow_btn"
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:src="@drawable/bhome"
                android:tint="#F91807"
                android:padding="5dp"
                android:layout_height="40dp">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/rectangle_gradient_pink"
            android:layout_below="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:scrollHorizontally="true"
                android:singleLine="true"  android:textColor="@color/black"
                android:text="www.aoneshop.co.in"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="info@aoneshop.co.in"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.akp.aonestar.PriceDropModule.PriceDropFloatingButtonGameDetails
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_details"/>
    </LinearLayout>
</RelativeLayout>