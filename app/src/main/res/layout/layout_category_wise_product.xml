<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_margin="1.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/view_ll"
            android:background="@drawable/product_rectangle"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="3dp"
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/p_a" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:fontFamily="@font/productnamebold"
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textAlignment="center"
                    android:text="MicroWave"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
                <TextView
                    android:fontFamily="@font/productname"
                    android:singleLine="true"
                    android:id="@+id/code"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Under 600"
                    android:textAlignment="center"
                    android:textSize="11dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

