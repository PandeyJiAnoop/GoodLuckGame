<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_centerInParent="true"
    android:background="#009688"
    android:gravity="center">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/title_tv"
            android:text="WELCOME PRIME GIFT\nLOAD OF LUCK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:padding="5dp"
            android:textColor="@color/golden_color"
            android:textStyle="bold" />

        <TextView  android:id="@+id/marqueeText"
            android:text="In This Way you will get scratched six times,after that it will not come,you have to take one of the six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="12dp"
            android:padding="10dp"
            android:background="#FF4886"
            android:scrollHorizontally="true"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <pl.droidsonroids.gif.GifImageView android:id="@+id/gif_a"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="5dp" android:visibility="gone"
            android:src="@drawable/congratulationgf"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scratch HERE" android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="270dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="10dp">

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/yellow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:gravity="center"
                    android:text="You win\nMobile phone"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <com.akp.aonestar.PlayBuyModule.ScratchCardManager.ScratchCard
                android:id="@+id/scratchCard1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/linearProceed"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#8BC34A"
                android:background="@drawable/back_sqare_black"
                android:layout_marginStart="5dp">

                <TextView android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearExit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:background="@drawable/back_sqare_red"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/stargf"/>

</RelativeLayout>