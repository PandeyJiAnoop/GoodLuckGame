    <LinearLayout
        android:layout_below="@+id/header_rl"
        android:layout_above="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout android:visibility="gone"
                android:layout_width="match_parent"
                android:alpha=".9"
                android:layout_height="150dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_slider_mainActivity"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="7dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="150dp"
                        android:id="@+id/banner_rl1">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/pager1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true" />
                        <com.viewpagerindicator.CirclePageIndicator
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/red"
                android:layout_height="2dp">
            </View>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAllCaps="true"
                    android:background="#032359"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:text="* Choose Discount Product *"
                    android:textColor="#FEEB19"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <include layout="@layout/list_item"></include>

                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/probutton"
                    android:id="@+id/btn"   android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:text="Play Now"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    android:layout_below="@id/msg"
                    android:layout_centerHorizontal="true"/>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/norecord_tv"
                        android:layout_centerInParent="true"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/norecord"
                        />
                    <LinearLayout
                        android:id="@+id/srl_refresh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/cust_recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:visibility="visible" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

    </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:background="#A3000000"
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/buynow_btn"
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:src="@drawable/bhome"
                android:tint="#F91807"
                android:padding="5dp"
                android:layout_height="40dp">
            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/rectangle_gradient_pink"
            android:layout_below="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:scrollHorizontally="true"
                android:singleLine="true"  android:textColor="@color/black"
                android:text="www.aoneshop.co.in"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="info@aoneshop.co.in"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </RelativeLayout>
