        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:background="@drawable/rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:padding="7dp"
                        android:tint="#0F2560"
                        android:id="@+id/rupeesymbol1"
                        android:src="@drawable/das_c"
                        android:layout_height="50dp">
                    </ImageView>
                    <View
                        android:layout_width="0.1dp"
                        android:id="@+id/view1"
                        android:layout_toRightOf="@id/rupeesymbol1"
                        android:background="@color/grey"
                        android:layout_height="50dp">
                    </View>
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="Enter Bid Amount"
                        android:maxLength="15"
                        android:inputType="numberDecimal"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:textColorHint="#AEACAC"
                        android:id="@+id/rupee_et"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/view1"
                        android:layout_height="50dp">
                    </EditText>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/status_tv"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Place your bid &amp; wait for result , Result show in Bid winner list"
                android:textSize="8sp"
                android:textColor="#434242" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Submit_btn"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/probutton"
                android:text="Place Your Bid"
                android:elevation="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="14dp" />
            <!-- add RadioGroup which contain the many RadioButton-->


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>