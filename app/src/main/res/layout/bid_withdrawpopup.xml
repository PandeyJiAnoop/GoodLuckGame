<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="20dp"
    android:layout_margin="1dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/product_rectangle"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="3dp"
                            android:id="@+id/proimg"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/p_a" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:padding="5sp"
                        android:background="@drawable/bg"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:padding="5dp">
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textStyle="bold"

                                android:text="Product Name"
                                android:textColor="@color/white"
                                android:textSize="13dp" />
                            <View
                                android:layout_width="0.2dp"
                                android:layout_height="match_parent"
                                android:background="@color/teal_200" />
                            <TextView
                                android:id="@+id/name_tv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"

                                android:text="N/A"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/white"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:padding="5dp">
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textStyle="bold"

                                android:text="Product Code"
                                android:textColor="@color/white"
                                android:textSize="13dp" />
                            <View
                                android:layout_width="0.2dp"
                                android:layout_height="match_parent"
                                android:background="@color/teal_200" />
                            <TextView
                                android:id="@+id/code_tv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"

                                android:text="N/A"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/white"
                                android:textSize="13dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:text="Amount"
                                android:textColor="@color/white"
                                android:textSize="13dp" />
                            <View
                                android:layout_width="0.2dp"
                                android:layout_height="match_parent"
                                android:background="@color/teal_200" />
                            <TextView
                                android:id="@+id/amount_tv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"

                                android:text="N/A"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/white"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:text="Bid Amount"
                                android:textColor="@color/white"
                                android:textSize="13dp" />
                            <View
                                android:layout_width="0.2dp"
                                android:layout_height="match_parent"
                                android:background="@color/teal_200" />
                            <TextView
                                android:id="@+id/orderamount_tv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"

                                android:text="N/A"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/white"
                                android:textSize="13dp" />
                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/view_more_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:text="Product Details"
                                android:textColor="@color/white"
                                android:textSize="13dp" />
                            <View
                                android:layout_width="0.2dp"
                                android:layout_height="match_parent"
                                android:background="@color/teal_200" />
                            <TextView
                                android:id="@+id/orderamount_details"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:drawableRight="@android:drawable/arrow_down_float"

                                android:text="View Details"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/redone"
                                android:textSize="13dp" />
                        </LinearLayout>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/productdetails_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5sp"
                            android:layout_margin="2dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/bg"
                            android:textColor="@color/white"
                            android:textSize="12dp" />







                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

