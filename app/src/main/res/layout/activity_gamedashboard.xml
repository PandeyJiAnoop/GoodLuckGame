<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/anoop"
    android:orientation="vertical">
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/a_game">
    </pl.droidsonroids.gif.GifImageView>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/star"/>

    <RelativeLayout
        android:id="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:elevation="5dp">

        <pl.droidsonroids.gif.GifImageView
            android:layout_centerVertical="true"
            android:id="@+id/ivProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:src="@drawable/a_logogif"/>

        <LinearLayout
            android:layout_toRightOf="@+id/ivProfile"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="3dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/a_youtube"
                    />
                <TextView
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <View
                android:layout_width="1.0dp"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"
                android:layout_height="40dp">

            </View>
            <LinearLayout  android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView android:padding="3dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/a_winner"
                    />
                <TextView android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Winner"
                    android:textColor="@color/white"
                    />


            </LinearLayout>
            <View
                android:layout_width="1.0dp"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"
                android:layout_height="40dp">

            </View>

            <LinearLayout  android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView android:padding="3dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/a_wallet"
                    />
                <TextView android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u20B9 500"
                    android:textColor="@color/white"
                    />


            </LinearLayout>
            <View
                android:layout_width="1.0dp"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"
                android:layout_height="40dp">

            </View>

            <LinearLayout android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView android:padding="3dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/a_profile"
                    />
                <TextView android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="@color/white"
                    />


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="@color/red"
            android:layout_height="0.2dp">

        </View>
    </RelativeLayout>


    <ScrollView
        android:layout_below="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="180dp">
<!--                <com.smarteist.autoimageslider.SliderLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="@drawable/ban"-->
<!--                    android:id="@+id/imageSlider"/>-->

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/red"
                android:layout_height="2dp">
            </View>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/btnone_img"
                android:layout_marginLeft="10dp"
                android:layout_width="270dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/glone"
                android:layout_height="80dp">
            </pl.droidsonroids.gif.GifImageView>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/btn_two_img"
                android:layout_marginLeft="10dp"
                android:layout_width="270dp"
                android:src="@drawable/gltwo"
                android:layout_height="80dp">
            </pl.droidsonroids.gif.GifImageView>

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:src="@drawable/demo"
                android:scaleType="fitXY"
                android:layout_marginBottom="40dp"
                android:layout_height="300dp">
            </pl.droidsonroids.gif.GifImageView>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/person_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="10dp"
        android:scrollHorizontally="true"
        android:singleLine="true"  android:textColor="@color/black"
        android:background="@drawable/rectangle_gradient_pink"
        android:layout_alignParentBottom="true"
        android:text="www.aoneshop.co.in       info@aoneshop.co.in"        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>