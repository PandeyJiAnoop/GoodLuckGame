<!--                        android:textStyle="bold"-->
<!--                        android:gravity="center"-->
<!--                        android:layout_marginLeft="35dp"-->
<!--                        android:layout_marginRight="15dp"/>-->
<!--                    -->




                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/imgs"
                    android:layout_centerHorizontal="true"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/probutton"
                    android:id="@+id/btn"
                    android:layout_marginTop="20dp"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:text="Play Now"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    android:layout_below="@id/msg"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>





            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAllCaps="true"
                    android:background="#032359"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textAlignment="center"
                    android:text="* Free Trial Product *"
                    android:textColor="#FEEB19"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/norecord_tv"
                        android:layout_centerInParent="true"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/norecord"
                        />
                    <LinearLayout
                        android:id="@+id/srl_refresh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/cust_recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:background="#A3000000"
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/buynow_btn"
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:src="@drawable/bhome"
                android:tint="#F91807"
                android:padding="5dp"
                android:layout_height="40dp">
            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/rectangle_gradient_pink"
            android:layout_below="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:scrollHorizontally="true"
                android:singleLine="true"  android:textColor="@color/black"
                android:text="www.aoneshop.co.in"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="info@aoneshop.co.in"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.akp.aonestar.Basic.FloatingButtonGameDetails
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_details"/>
    </LinearLayout>


</RelativeLayout>